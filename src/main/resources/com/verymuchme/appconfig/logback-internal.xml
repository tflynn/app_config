<configuration>
	<appender class="ch.qos.logback.core.ConsoleAppender" name="com.verymuchme.appconfig.CONSOLE_APPENDER">

		<layout class="ch.qos.logback.classic.PatternLayout">
			<pattern>[%d{yyyy-MM-dd HH:mm:ss}]		[%-5p]		[%t]	%m %n</pattern>
		</layout>
	</appender>

	<logger name="com.verymuchme.appconfig" additivity="false">
		<level value="DEBUG"/>
		<appender-ref ref="com.verymuchme.appconfig.CONSOLE_APPENDER" />
	</logger>
</configuration>
